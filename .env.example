# Environment file for Docker Compose
# Copy this file to .env and fill in your values

# Required: Discord Bot Token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Optional: Commercial CAPTCHA Solving Service
# Get API key from https://anti-captcha.com
# Leave empty to disable commercial CAPTCHA solving (OCR only)
ANTICAPTCHA_API_KEY=

# Optional: Enable/disable commercial CAPTCHA service
# Set to false to disable commercial CAPTCHA solving even if API key is provided
USE_COMMERCIAL_CAPTCHA=true

# Optional: Logging configuration
LOG_LEVEL=INFO
DEBUG=false

# Optional: Update settings
# Set to false to disable automatic updates in containers
AUTO_UPDATE=true